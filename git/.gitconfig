[user]
	name = pira
	email = pira.y1121@gmail.com

[core]
	excludesfile = /Users/pira/.gitignore_global
#	editor = vim

[init]
#	defaultBranch = main

[alias]
	st = status -sb # s=short / b=branch
	a = add
	au = add --update #変更があったかつバージョン管理課のファイルをステージング
	aa = add --all #変更があったすべてのファイルをステージング（新規作成したファイルも含む）
	c = commit -m
	b = branch
	co = checkout
	sw = switch
	l = log --oneline --graph --all
	d = diff

[https]
	proxy = http://proxy.cc.uec.ac.jp:8080/

# HTTPSでcloneしてもsshでpushできます(pullはHTTPSのままなので高速)
[url "git@github.com:"]
	pushinsteadof = https://github.com/
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[commit]
	template = /Users/pira/.stCommitMsg
